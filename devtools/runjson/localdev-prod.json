[
  {
    "Name": "Build-BE",
    "Command": [
      "make",
      "-s",
      "bin/goalert",
      "BUILD_TAGS=sql_highlight",
      "BUNDLE=1"
    ],
    "Restart": true,
    "Quiet": true,
    "IgnoreErrors": true
  },
  {
    "Name": "MailHog",
    "Command": [
      "go",
      "run",
      "github.com/mailhog/MailHog",
      "-ui-bind-addr=localhost:8025",
      "-api-bind-addr=localhost:8025",
      "-smtp-bind-addr=localhost:1025"
    ],
    "Restart": true,
    "IgnoreErrors": true
  },
  {
    "Name": "Backend",
    "Before": {
      "Name": "Wait JE",
      "Command": ["bin/waitfor", "http://localhost:16686"]
    },
    "Command": [
      "bin/goalert",
      "-l=localhost:3030",
      "--jaeger-endpoint=http://localhost:14268",
      "--db-url=postgres://goalert@localhost:5432/goalert?sslmode=disable"
    ],
    "Restart": true,
    "IgnoreErrors": true,
    "Watch": true
  },
  {
    "Name": "Jaeger",
    "Command": [
      "docker",
      "run",
      "--rm",
      "-p=6831:6831/udp",
      "-p=6832:6832/udp",
      "-p=5778:5778",
      "-p=16686:16686",
      "-p=14268:14268",
      "-p=9411:9411",
      "--name=jaeger",
      "jaegertracing/all-in-one"
    ],
    "Before": {
      "Name": "JE Cleanup",
      "Command": ["docker", "rm", "-f", "jaeger"],
      "IgnoreErrors": true
    },
    "After": {
      "Name": "JE Cleanup",
      "Command": ["docker", "rm", "-f", "jaeger"],
      "IgnoreErrors": true
    }
  }
]
