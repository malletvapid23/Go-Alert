[
  {
    "Name": "Build-BE",
    "Command": ["make", "-s", "bin/goalert"],
    "Restart": true,
    "Quiet": true,
    "IgnoreErrors": true
  },
  {
    "Name": "Backend",
    "Command": [
      "bin/procwrap",
      "-test=localhost:3042",
      "bin/goalert",
      "-l=localhost:3042",
      "--ui-url=http://localhost:3045",
      "--db-url=postgres://postgres@localhost:5433/postgres?sslmode=disable",
      "--slack-base-url=http://localhost:3040/slack",
      "--log-errors-only"
    ],
    "Restart": true,
    "IgnoreErrors": true,
    "Watch": true,
    "Before": {
      "Name": "PG Wait",
      "Command": [
        "bin/waitfor",
        "postgres://postgres@localhost:5433/postgres?sslmode=disable"
      ]
    }
  },
  {
    "Name": "UI",
    "Command": [
      "yarn",
      "workspace",
      "goalert-web",
      "webpack",
      "serve",
      "--devtool=cheap-module-source-map",
      "--allowed-hosts=docker.for.mac.host.internal",
      "--port=3045",
      "--mode=development"
    ]
  },
  {
    "Name": "Slack",
    "Restart": true,
    "Watch": true,
    "Command": [
      "bin/mockslack",
      "-client-id=000000000000.000000000000",
      "-client-secret=00000000000000000000000000000000",
      "-access-token=xoxp-000000000000-000000000000-000000000000-00000000000000000000000000000000",
      "-prefix=/slack",
      "-single-user=bob",
      "-addr=localhost:3046"
    ]
  },
  {
    "Name": "Proxy",
    "Command": [
      "bin/simpleproxy",
      "-addr=localhost:3040",
      "/slack/=http://localhost:3046",
      "http://localhost:3042"
    ]
  },
  {
    "Name": "Postgres",
    "Before": {
      "Name": "PG Cleanup",
      "Command": ["docker", "rm", "-f", "smoketest-postgres"],
      "IgnoreErrors": true
    },
    "After": {
      "Name": "PG Cleanup",
      "Command": ["docker", "rm", "-f", "smoketest-postgres"],
      "IgnoreErrors": true
    },
    "Command": [
      "docker",
      "run",
      "--rm",
      "--name=smoketest-postgres",
      "-p=5433:5432",
      "-e=POSTGRES_HOST_AUTH_METHOD=trust",
      "postgres:13-alpine"
    ]
  },

  {
    "Name": "Cypress",
    "Before": {
      "Name": "BE Wait",
      "Command": ["bin/waitfor", "http://localhost:3042"]
    },
    "Command": [
      "yarn",
      "workspace",
      "goalert-web",
      "cypress",
      "open",
      "--config",
      "baseUrl=http://localhost:3040$GOALERT_HTTP_PREFIX"
    ],
    "Env": [
      "CYPRESS_DB_URL=postgres://postgres@localhost:5433/postgres?sslmode=disable"
    ],
    "ExitAfter": true
  }
]
