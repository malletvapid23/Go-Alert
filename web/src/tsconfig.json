{
  "compilerOptions": {
    "strict": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitThis": true
  },
  "include": ["./app/"],
  "exclude": ["./node_modules/", "./build/"]
}
