{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "../node_modules",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "types": ["cypress"],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // TODO: set isolatedModules to true
    "noImplicitAny": true,
    "isolatedModules": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*"]
}
